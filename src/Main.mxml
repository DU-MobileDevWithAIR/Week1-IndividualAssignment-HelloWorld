<?xml version="1.0"?>
<s:Application
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Style>
        .myAlert {
            fontSize: 42;
            horizontalCenter: 0;
            verticalCenter: 0;
            color: red;
        }

        .myAlert2 {
            fontSize: 30;
            color: blue;
            horizontalCenter: -50;
            verticalCenter:60;
        }

    </fx:Style>

    <fx:Script><![CDATA[
        import mx.controls.Alert;
        ]]></fx:Script>

    <s:Button click="Alert.show('Hello, world!')" label="Say Hello"/>

    <s:Label id="myLabel"
         styleName="myAlert"
         text="Hello World!"
        />

    <s:Label
        id="myLabel2"
        styleName="myAlert2"
        >
        <s:text>
            "Hello World!"
        </s:text>
    </s:Label>

    <s:Panel
        width="300"
        height="150"
        horizontalCenter="0"
        verticalCenter="200"
        title="No I'm in a container!"
        >
        <s:Label
         horizontalCenter="0"
         verticalCenter="0"
         text="Hello World!"
         />
    </s:Panel>
</s:Application>


